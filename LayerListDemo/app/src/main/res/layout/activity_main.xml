<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/apppad"
    tools:context="com.example.android.layerlistdemo.MainActivity">

    <ImageButton
        android:id="@+id/mybtn"
        android:layout_width="@dimen/btnsize"
        android:layout_height="@dimen/btnsize"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/btnstate"
        android:onClick="updatetv"/>

    <TextView
        android:id="@+id/mytxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_weight="9"
        android:layout_gravity="center"
        android:text="0"
        android:textSize="30sp"/>

</LinearLayout>
